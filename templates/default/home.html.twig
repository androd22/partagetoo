{% extends 'base.html.twig' %}
{% block head %}
   <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}

   {% block content %}
      <div class="container-fluid">
         <div class="backgroundUrl"></div>
         <h1 class="py-5 text-center">Les annonces post√©es </h1>
         <div class="d-flex flex-wrap justify-content-center margeCard">
            {% for ad in ads %}
               <div class="card shadow-lg p-3 mb-5 bg-body-tertiary mx-5" style="width: 25%;">
                  <img src="{{ asset('/images/post/' ~ ad.image) }}" class="card-img-top" alt="...">
                  <div class="card-body">
                     <h2 class="card-title">{{ ad.title }}</h2>
                     <p class="card-text">{{ ad.description }}</p>
                     <p class="fst-italic">{{ ad.createdAt | date('d-m-Y') }}</p>
                     <a href="{{ path('ad_show', {'id' : ad.id}) }}" class="btn btn-info text-white">Voir l'annonce</a>
                  </div>
               </div>
            {% endfor %}
         </div>
      </div>
   {% endblock %}